<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- Estilo barra de accion -->
    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/white</item>
        <item name="background">@color/blanco_mas_oscuro</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="actionMenuTextAppearance">@style/MyActionBarMenuText</item>
        <item name="actionMenuTextColor">@style/MyActionBarMenuText</item>
    </style>
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- Texto barra de accion -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/moradoMyCan</item>
    </style>
    <style name="MyActionBarMenuText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/moradoMyCan</item>
    </style>

</resources>
